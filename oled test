#include <Wire.h>
#include <U8g2lib.h>

// Použi správny driver podľa tvojej OLED (SH1106 alebo SSD1306)
// Ak máš SH1106:
U8G2_SH1106_128X64_NONAME_F_HW_I2C u8g2(U8G2_R0, U8X8_PIN_NONE);
// Ak by si mal SSD1306, odkomentuj toto a zakomentuj hore:
// U8G2_SSD1306_128X64_NONAME_F_HW_I2C u8g2(U8G2_R0, U8X8_PIN_NONE);

void setup() {
  u8g2.begin();
}

void loop() {
  u8g2.clearBuffer();
  u8g2.setFont(u8g2_font_fub20_tr);  // veľké písmo
  u8g2.setCursor(0, 30);
  u8g2.print("OLED OK!");
  u8g2.sendBuffer();
  delay(1000);

  u8g2.clearBuffer();
  u8g2.setFont(u8g2_font_ncenB14_tr);
  u8g2.setCursor(0, 20);
  u8g2.print("Hello");
  u8g2.setCursor(0, 45);
  u8g2.print("ESP32 :)");
  u8g2.sendBuffer();
  delay(1000);
}
